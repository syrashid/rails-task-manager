<div class="container mt-5">
  <h1>My Tasks</h1>
  <ul class="list-group list-unstyled">
    <% @tasks.each do |task| %>
    <li class="list-group-item">
      <% if task.complete %>
        <i class="far fa-check-square" ></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_show_path(task)  %>
    </li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Create a New Task",tasks_new_path, class: 'btn btn-primary' %>
</div>
